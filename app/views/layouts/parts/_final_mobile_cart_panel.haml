-# Финальная версия мобильной панели корзины
- if !session[:cart].nil? && !session[:cart].empty?
  - total_items = session[:cart].sum { |item| item["quantity"].to_i }
  - total_sum = 0
  - session[:cart].each do |item|
    - product = Product.find_by_id(item["id"])
    - if product
      - complect_id = Complect.find_by_title(item["type"] || "standard")&.id || 1
      - product_complect = ProductComplect.find_by(product_id: product.id, complect_id: complect_id)
      - if product_complect
        - total_sum += product_complect.price * item["quantity"].to_i
  
  .mobile-cart-panel#mobile-cart-panel
    .mobile-cart-panel__content
      .mobile-cart-panel__items-count
        %span.mobile-cart-panel__count-badge= total_items
      
      %a.mobile-cart-panel__cart-button{ href: "/cart" }
        В корзину
      
      .mobile-cart-panel__total-price
        %span.mobile-cart-panel__price= "#{total_sum.round} ₽"

:css
  .mobile-cart-panel {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 48px;
    background-color: #fff;
    border-top: 1px solid #ddd;
    box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.1);
    z-index: 9999;
    display: none; /* Скрыта по умолчанию */
    align-items: center;
    padding: 0 16px;
  }

  .mobile-cart-panel__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    max-width: 100%;
  }

  .mobile-cart-panel__items-count {
    display: flex;
    align-items: center;
    margin-right: 12px;
  }

  .mobile-cart-panel__count-badge {
    background-color: #ff4757;
    color: white;
    border-radius: 50%;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    font-weight: bold;
    min-width: 24px;
  }

  .mobile-cart-panel__cart-button {
    flex: 1;
    text-align: center;
    background-color: #2ecc71;
    color: white;
    padding: 8px 16px;
    border-radius: 4px;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    margin: 0 12px;
    transition: background-color 0.2s;
  }

  .mobile-cart-panel__cart-button:hover {
    background-color: #27ae60;
    color: white;
    text-decoration: none;
  }

  .mobile-cart-panel__total-price {
    font-size: 14px;
    font-weight: bold;
    color: #333;
    white-space: nowrap;
  }

  .mobile-cart-panel__price {
    color: #e74c3c;
    font-size: 16px;
  }

  /* Показываем только на мобильных устройствах и только НЕ на страницах корзины */
  @media (max-width: 768px) {
    .mobile-cart-panel {
      display: flex !important;
    }
    
    /* Скрываем на страницах корзины */
    body[data-page-cart] .mobile-cart-panel {
      display: none !important;
    }
    
    /* Добавляем отступ снизу для body */
    body:not([data-page-cart]) {
      padding-bottom: 48px;
    }
  }

  @media (min-width: 769px) {
    .mobile-cart-panel {
      display: none !important;
    }
  }

:javascript
  document.addEventListener('DOMContentLoaded', function() {
    const cartPanel = document.getElementById('mobile-cart-panel');
    
    if (cartPanel) {
      // Скрываем панель на страницах корзины
      const currentPath = window.location.pathname;
      const isCartPage = currentPath.startsWith('/cart');
      
      if (isCartPage) {
        cartPanel.style.display = 'none';
        document.body.removeAttribute('data-page-cart');
        document.body.setAttribute('data-page-cart', 'true');
      } else {
        // Показываем панель на мобильных устройствах
        if (window.innerWidth <= 768) {
          cartPanel.style.display = 'flex';
        }
      }
      
      // Обновляем при изменении размера окна
      window.addEventListener('resize', function() {
        if (!isCartPage && window.innerWidth <= 768) {
          cartPanel.style.display = 'flex';
        } else if (window.innerWidth > 768) {
          cartPanel.style.display = 'none';
        }
      });
    }
    
    console.log('Mobile cart panel loaded');
  });

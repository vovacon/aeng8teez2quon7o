-# Отладочная версия панели корзины с диагностикой
-# Показываем всегда для диагностики
.mobile-cart-panel-debug{ style: "position: fixed; top: 10px; left: 10px; background: #f0f0f0; padding: 10px; font-size: 12px; z-index: 99999; border: 2px solid #333; max-width: 300px;" }
  %strong Отладка панели корзины:
  %br
  Session cart: #{session[:cart].nil? ? 'nil' : session[:cart].inspect}
  %br
  Cart items count: #{cart_has_items? ? cart_items_count : 0}
  %br
  Should show panel (normal): #{should_show_cart_panel?}
  %br
  Should show panel (debug): #{should_show_cart_panel_debug?}
  %br
  Current path: #{request.path_info}
  %br
  Total price: #{cart_has_items? ? total.to_i : 0} ₽
  %br
  Screen width: <span id="screen-width">unknown</span>

- if should_show_cart_panel_debug?
  .mobile-cart-panel#mobile-cart-panel
    .mobile-cart-panel__content
      .mobile-cart-panel__items-count
        %span.mobile-cart-panel__count-badge{ id: "cart-count-badge" }= cart_items_count
      
      %a.mobile-cart-panel__cart-button{ href: "/cart" }
        В корзину
      
      .mobile-cart-panel__total-price
        %span.mobile-cart-panel__price{ id: "cart-total-price" }= "#{total.to_i} ₽"
- else
  .mobile-cart-panel-hidden{ style: "position: fixed; bottom: 10px; left: 10px; background: #ff0000; color: white; padding: 5px; font-size: 12px; z-index: 99999;" }
    Панель скрыта: #{cart_has_items? ? 'условие path' : 'корзина пуста'}

:css
  .mobile-cart-panel {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 48px;
    background-color: #fff;
    border-top: 1px solid #ddd;
    box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.1);
    z-index: 9999;
    display: flex;
    align-items: center;
    padding: 0 16px;
  }

  .mobile-cart-panel__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    max-width: 100%;
  }

  .mobile-cart-panel__items-count {
    display: flex;
    align-items: center;
    margin-right: 12px;
  }

  .mobile-cart-panel__count-badge {
    background-color: #ff4757;
    color: white;
    border-radius: 50%;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    font-weight: bold;
    min-width: 24px;
  }

  .mobile-cart-panel__cart-button {
    flex: 1;
    text-align: center;
    background-color: #2ecc71;
    color: white;
    padding: 8px 16px;
    border-radius: 4px;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    margin: 0 12px;
    transition: background-color 0.2s;
  }

  .mobile-cart-panel__cart-button:hover {
    background-color: #27ae60;
    color: white;
    text-decoration: none;
  }

  .mobile-cart-panel__total-price {
    font-size: 14px;
    font-weight: bold;
    color: #333;
    white-space: nowrap;
  }

  .mobile-cart-panel__price {
    color: #e74c3c;
    font-size: 16px;
  }

  /* Показываем только на мобильных устройствах */
  @media (max-width: 768px) {
    .mobile-cart-panel {
      display: flex !important;
    }
  }

  @media (min-width: 769px) {
    .mobile-cart-panel {
      display: none !important;
    }
  }

  /* Отступ снизу для body */
  @media (max-width: 768px) {
    body.has-mobile-cart-panel {
      padding-bottom: 48px;
    }
  }

:javascript
  document.addEventListener('DOMContentLoaded', function() {
    // Показываем размер экрана для отладки
    const screenWidthEl = document.getElementById('screen-width');
    if (screenWidthEl) {
      screenWidthEl.textContent = window.innerWidth + 'px';
      window.addEventListener('resize', function() {
        screenWidthEl.textContent = window.innerWidth + 'px';
      });
    }
    
    console.log('Mobile cart panel debug loaded');
    console.log('Screen width:', window.innerWidth);
    console.log('Cart panel element:', document.getElementById('mobile-cart-panel'));
    
    // Принудительно показываем панель на мобильных для тестирования
    const panel = document.getElementById('mobile-cart-panel');
    if (panel && window.innerWidth <= 768) {
      panel.style.display = 'flex';
      panel.style.position = 'fixed';
      panel.style.bottom = '0';
      panel.style.left = '0';
      panel.style.right = '0';
      panel.style.zIndex = '9999';
      document.body.classList.add('has-mobile-cart-panel');
      console.log('Panel forced to show on mobile');
    }
  });

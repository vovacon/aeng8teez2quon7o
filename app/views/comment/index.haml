      xhr.open('GET', '/feedback/load_more?page=' + currentPage + '&t=' + Date.now(), true);
      
      // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –≤—Å–µ –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã–µ –∑–∞–≥–æ–ª–æ–≤–∫–∏
      xhr.setRequestHeader('X-Requested-With', 'XMLHttpRequest');

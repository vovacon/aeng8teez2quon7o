    /* Common Switch Styles */
    .switch-container {
      margin-bottom: 10px;
    }
    
    .switch {
      position: relative;
      display: inline-flex;
      align-items: center;
      width: auto;
      height: 34px;
      margin: 0;
    }
    
    .switch .switch-input {
      opacity: 0;
      width: 0;
      height: 0;
      position: absolute;
    }
    
    .switch-slider {
      position: relative;
      cursor: pointer;
      width: 60px;
      height: 34px;
      background-color: #ccc;
      transition: .4s;
      margin-right: 15px;
      flex-shrink: 0;
    }
    
    .switch-slider:before {
      position: absolute;
      content: "";
      height: 26px;
      width: 26px;
      left: 4px;
      bottom: 4px;
      background-color: white;
      transition: .4s;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }
    
    .switch-input:checked + .switch-slider {
      background-color: #28a745;
    }
    
    .switch-input:focus + .switch-slider {
      box-shadow: 0 0 1px #28a745;
    }
    
    .switch-input:checked + .switch-slider:before {
      transform: translateX(26px);
    }
    
    .switch-slider.round {
      border-radius: 34px;
    }
    
    .switch-slider.round:before {
      border-radius: 50%;
    }
    
    .switch-label {
      font-size: 14px;
